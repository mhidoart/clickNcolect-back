<div class="container">

    <div class="row" id="restaurants">
        <div><a href="/addrestuarant" class="btn btn-primary m-3"> Ajouter r√©staurant</a>
        </div>
        <table class="table table-dark">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Nom</th>
                    <th scope="col">Type</th>
                    <th scope="col">Date Ajout</th>
                    <th scope="col">Adresse</th>
                    <th scope="col">Action</th>
                </tr>
            </thead>
            <tbody>
                <% restaurants.forEach(resto=> { %>
                    <tr>
                        <th scope="row">
                            <%=resto.id%>
                        </th>
                        <td>
                            <%=resto.name%>
                        </td>
                        <td>
                            <%=resto.type%>
                        </td>
                        <td style="max-width: 200px;">
                            <%=resto.dt_ajout%>
                        </td>
                        <td>
                            <%=resto.adresse%>
                        </td>
                        <td>
                            <button class="btn btn-warning">Details</button>
                            <a href="/addmenu?idResto=<%=resto.id%>" class="btn btn-primary">Menus</a>
                            <form action="/delete_resto" method="post">
                                <input class="d-none" name="idResto" type="text" value="<%=resto.id%>">
                                <button type="submit" class="btn btn-danger">Supprimer</button>
                            </form>
                        </td>
                    </tr>

                    <% } );%>

            </tbody>
        </table>
    </div>
</div>