<div class="container mt-3">
    <h1 class="text-center">Modifier Menu</h1>
    <div class="row">
        <div class="col-md-6 border">
            <form action="/updateMenu" method="POST" enctype="multipart/form-data">
                <div class="form-group">
                    <input type="text" class="form-control d-none " id="id" name="id" value="<%=resto.id%>">
                    <input type="text" class="form-control  d-none " id="idMenu" name="idMenu" value="<%=menu.id%>">
                </div>
                <div class="form-group">
                    <label for="name">Nom</label>
                    <input type="text" class="form-control" id="name" name="name" value="<%=menu.nom%>">
                </div>

                <div class="form-group">
                    <label for="ingredient">Ingr√©dients</label>
                    <textarea class="form-control" id="ingredient" name="ingredient"
                        rows="3"><%=menu.ingredient%></textarea>
                </div>

                <div class="custom-file col-md-3">
                    <label class="custom-file-label" for="imgMenu">photo du Menu (mise en avant)</label>

                    <input type="file" class="form-control custom-file-input" id="imgMenu" name="imgMenu">
                    <div class="invalid-feedback">Example invalid custom file feedback</div>
                </div>
                <div class="m-3 text-center"><button type="submit" class="btn btn-primary">Modifier</button></div>
            </form>
        </div>
        <div class="col-md-6">
            <img class="img-thumbnail" height="350" width="350" src="/uploads/<%=menu.image%>" alt="" srcset="">
        </div>
    </div>
</div>